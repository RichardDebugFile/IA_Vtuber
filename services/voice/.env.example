# ---- Servicio local ----
HOST=127.0.0.1
PORT=8810
SAVE_WAV_DIR=.runs/tts_out
PUBLISH_AUDIO_EVENTS=false
CACHE_MAX_ITEMS=50
CACHE_MAX_MB=200

# ---- OpenAudio / Fish ----
FISH_ENABLE=true
FISH_HOST=http://127.0.0.1:9080
FISH_TTS_PATH=/api/tts                  
FISH_MODEL_DIR=services/voice/checkpoints/openaudio-s1-mini
FISH_DEVICE=cuda:0                      # o cpu
FISH_SR=24000
FISH_EMOTION_DEFAULT=neutral

# ---- w-okada / RVC ----
RVC_ENABLE=true
RVC_MODE=http                           # http | cli
RVC_HOST=http://127.0.0.1:18888
RVC_HTTP_CONVERT_PATH=/test             # endpoint de conversión 
RVC_MODEL_DIR=services/voice/src/vc/models/aura
RVC_MODEL_PTH=${RVC_MODEL_DIR}/aura.pth
RVC_INDEX_PATH=${RVC_MODEL_DIR}/aura.index
RVC_SR=24000
RVC_F0_METHOD=rmvpe                     # rmvpe|harvest|crepe|dio|fcpe
RVC_KEY=0                               # ± semitonos
RVC_INDEX_RATE=0.30
RVC_VOLUME=1.0

# ---- Gateway (opcional) ----
GATEWAY_WS=ws://127.0.0.1:8765/ws
